<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- Layout cho phần web (người dùng) -->
    <mapping path="/web/*" decorator="/WEB-INF/decorators/web.jsp" />

    <!-- Layout cho phần admin -->
    <mapping path="/admin/*" decorator="/WEB-INF/decorators/admin.jsp" />

    <!-- Loại bỏ trang login, api khỏi decorator -->
    <mapping path="/api/*" exclude="true" />
    <mapping path="/login*" exclude="true" />
</sitemesh>